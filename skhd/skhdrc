# Restart server
cmd + ctrl + shift - r : yabai --restart-service

# Switch layout to BSP and float
ctrl + cmd - a : yabai -m space --layout bsp
# Switch layout to Float
ctrl + cmd - d : yabai -m space --layout float
# Toggle window float
ctrl + cmd - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# Move window left (BSP and floating)
ctrl + cmd - h : yabai -m window --warp west; yabai -m window --grid 1:2:0:0:1:1
# Move window right (BSP and floating)
ctrl + cmd - l : yabai -m window --warp east; yabai -m window --grid 1:2:1:0:1:1
# Move window down (BSP and floating)
ctrl + cmd - j : yabai -m window --warp south; yabai -m window --grid 2:1:0:1:2:1
# Move window up (BSP and floating)
ctrl + cmd - k : yabai -m window --warp north; yabai -m window --grid 2:1:0:0:2:1
# Fullscreen
ctrl + cmd - m : yabai -m window --toggle zoom-fullscreen; yabai -m window --grid 1:1:0:0:1:1

# Center float
ctrl + cmd - n : yabai -m window --grid 8:8:1:1:6:6
# Center small float
ctrl + cmd - b : yabai -m window --grid 4:4:1:1:2:2

# Rotate window in BSP
cmd + ctrl - r : yabai -m space --rotate 270
cmd + ctrl - y : yabai -m space --mirror y-axis
cmd + ctrl - x : yabai -m space --mirror x-axis

# Change window focus
cmd - h : yabai -m window --focus west
cmd - l : yabai -m window --focus east
cmd - j : yabai -m window --focus south
cmd - k : yabai -m window --focus north

# Resize window left
cmd + ctrl + shift - h : yabai -m window --resize left:-50:0; yabai -m window --resize right:-50:0
# Resize window down
cmd + ctrl + shift - j : yabai -m window --resize bottom:0:50; yabai -m window --resize top:0:50
# Resize window up
cmd + ctrl + shift - k : yabai -m window --resize top:0:-50; yabai -m window --resize bottom:0:-50
# Resize window right
cmd + ctrl + shift - l : yabai -m window --resize right:50:0; yabai -m window --resize left:50:0
# Balance space
cmd + ctrl + shift - e : yabai -m space --balance

